@model IEnumerable<Project_college_management.Models.Tutor>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-12" id="placeholder">

        @Html.Action("TutorsTable", "Tutors")
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    <script>
        $(document).on("click", ".del", function () {
            var id = $(this).data("pk");
            var trP = $(this).closest('tr');
            var trS = trP.next();
            if (confirm("Are you sure to delete?\nTutor will be deleted.")) {
                $.ajax({
                    url: "/Tutors/Delete/" + id,
                    method: "post",
                    dataType: "json",
                    success: r => {
                        if (r.success == true) {
                            trP.remove();
                            trS.remove();
                        }
                    }
                })
            }
        });
    </script>

}